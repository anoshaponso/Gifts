<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/giftImageg_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/giftNameg_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/giftImageg_v"
                android:layout_toEndOf="@+id/giftImageg_v"
                android:text="New Text"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/budgetg_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/giftNameg_v"
                android:layout_centerHorizontal="true"
                android:text="New Text"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/giftStatusg_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/budgetg_v"
                android:gravity="right"
                android:text="New Text"
                android:textColor="@android:color/background_dark" />
        </RelativeLayout>
    </TableRow>
</LinearLayout>