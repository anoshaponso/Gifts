<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="Groups"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/chart"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spentAll"
            android:layout_toStartOf="@+id/noOfGroups"
            android:layout_weight="0.16"
            android:background="@android:color/background_light"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/noOfGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"
            android:gravity="left"
            android:text="     "
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="People"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/noOfPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:gravity="left"
            android:text=" "
            android:textAlignment="gravity"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noOfGroups"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Budget"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/peopleBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/noOfGroups"
            android:layout_marginTop="21dp"
            android:gravity="left"
            android:text="  "
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/noOfGroups"
            android:gravity="right"
            android:text="Budget"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/groupBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spentAll"
            android:layout_alignBottom="@+id/spentAll"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="  "
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/noOfGifts"
            android:gravity="right"
            android:text="Gifts"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/noOfGifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:gravity="left"
            android:text=" "
            android:textAlignment="gravity"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/noOfGifts"
            android:gravity="right"
            android:text="Spent"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/spentAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/noOfGifts"
            android:layout_below="@+id/textView7"
            android:gravity="right"
            android:text="  "
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
