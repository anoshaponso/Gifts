<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="right"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:text="Gift Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/giftNameValuegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:background="#566d6b70"
            android:text=" "
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="56dp"
            android:text="Amount"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/budgetpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="56dp"
            android:text="Store                                      "
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/giftAmountValuegi"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/budgetpeople"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="right"
            android:popupBackground="#926D6B70" />

        <TextView
            android:id="@+id/remainpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/store"
            android:layout_marginTop="56dp"
            android:layout_toLeftOf="@+id/store"
            android:layout_toStartOf="@+id/store"
            android:text="Status"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/store"
            android:layout_alignTop="@+id/remainpeople"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="right"
            android:popupBackground="#926D6B70" />

        <EditText
            android:id="@+id/giftAmountValuegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/budgetpeople"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView"
            android:background="#566d6b70"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>